{
  "compilerOptions": {
    "target": "es2020",

    "module": "ESNext",
    "moduleResolution": "NodeNext",

    "allowImportingTsExtensions": true,
    "noEmit": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
  },
  "include": ["./test"],
  "files": ["./index.ts"]
}
